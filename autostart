#!/bin/bash
set -eou pipefail
export DISPLAY=:0.0
xrandr --output HDMI-1 --rotate left
xset -dpms
xset s off
xset s noblank
unclutter &
matchbox-window-manager -use_titlebar no -use_desktop_mode plain -use_cursor no &

cd /home/pi/mirror-v2

./wait github.com 443

git reset origin --hard
git pull

aws s3 cp --recursive s3://magic-mirror-v2/ ./dist
pnpm install --production

pnpm run serve &
pnpm run lite-ci &

./wait 127.0.0.1 3000

chromium-browser --kiosk --incognito --allow-insecure-localhost --disable-session-crashed-bubble --disable-infobars --enable-logging=/dev/null 127.0.0.1:3000